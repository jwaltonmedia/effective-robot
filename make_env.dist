DOCKER_NAMESPACE = opencv-experiments
DOCKER_IMAGE_VERSION ?= latest
DOCKER_REPOSITORY = opencv-service
DOCKER_CONTAINER_NAME = opencv-service
DOCKER_INSTANCE = 1
DOCKER_PORTS =
DOCKER_MAPPED_VOLUMES = --privileged -v $(shell pwd)/src:/src --privileged -v /tmp/.X11-unix:/tmp/.X11-unix:ro
DOCKER_ENV = \
  -e DISPLAY=$(DISPLAY) \
  --env="QT_X11_NO_MITSHM=1"
